#!/bin/bash

set -ex

if [ -z "${HG_VERSION}" ]; then
  echo "HG_VERSION not set"
  exit 1
fi

cd /work/vct

cp -a /vct-cache/venv .
chown -R `whoami` .
./create-test-environment
./run-tests \
  --verbose \
  --blacklist=testing/exclude_reviewboard.txt \
  --with-hg=venv/mercurials/${HG_VERSION}/bin/hg \
  --no-docker \
  --color=never
