// Dataframe
var data = stream
    |from()
        .measurement('disk')
        .where(lambda: isPresent("used_percent"))
        .groupBy('host')

// Thresholds
var alert = data
    |alert()
        .warn(lambda: "used_percent" > 90)
        .crit(lambda: "used_percent" > 95)
        .message('*[{{ index .Tags "host" }}]* disk usage is *{{ .Level }}*: {{ index .Fields "used_percent" | printf "%0.2f" }}% used')

// Alert
alert
        .stateChangesOnly(1h)
        .slack()
