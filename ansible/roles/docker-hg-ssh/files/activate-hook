import ConfigParser
import os
import sys

repo, key, value = sys.argv[1:]

hgrc = '/repo/hg/mozilla/%s/.hg/hgrc' % repo

c = ConfigParser.ConfigParser()

if os.path.exists(hgrc):
    c.read(hgrc)

if not c.has_section('hooks'):
    c.add_section('hooks')

c.set('hooks', key, value)

with open(hgrc, 'wb') as fh:
    c.write(fh)
